.mypage
  .mypage-image
    - if current_user.image?
      =image_tag current_user.image_url
  .mypage-lists
    %ul.mypage-list
      %li.mypage-list__tweet
        = link_to "ツイート数", user_path(current_user.id)
        = current_user.tweets.count
      %li.mypage-list__follow
        %a{:href => "#{following_user_path(@user)}"}
          %strong#following.stat
            following
            = @user.followings.count
      %li.mypage-list__follower
        %a{:href => "#{followers_user_path(@user)}"}
          %strong#followers.stat
            followers
            = @user.followers.count
      %li.mypage-list__likes
        likes
        = current_user.likes.count
    %ul.mypage-btn
      .mypage-btn__edit
        = link_to "プロフィールを編集", edit_user_path(current_user.id)
